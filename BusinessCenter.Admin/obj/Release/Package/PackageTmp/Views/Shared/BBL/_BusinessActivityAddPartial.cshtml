            //    msg.innerHTML = "Business Activity has been added successfully";
            //}
            //else if (data.response == "exists")
            //{
            //    msg.innerHTML = "This Business Activity already exist, please choose another";
            //    msg.style.color = "Red";
            //}
          
        }
        return false;
    }
    function editFailure(data) {
      //  console.log("error");
        return false;
    }
   
</script>