    });
    </script>
    
    
    
    <script>
        function DownloadPdf(param1)
        {
            $.ajax({
                url: '/Account/ValidateConcurrentLogin',
                type: 'Get',
                cache: false,
                //data: { AllData: $('#InActive').val() },
                success: function (data) {
                    if (data == 'TRUE') {
                      window.open('/BBL/Download?fileId=' + param1, '_blank');
                    }
                    else {
                       window.location.href = '/Account/SessionExpiry';
                    }
                },
                error: function () {
                }
            });




           
        }

      

    </script>
}





