@using System.Web.Optimization
@{
    ViewBag.Title = "DCRA - Reset Password";
}
@model BusinessCenter.Admin.Models.ResetPasswordModel
<div class="container headerBreadcrumb">
    @Html.ActionLink("Home", "Login", "Account")
    <span class="easy-breadcrumb_segment-separator"> / </span>
    @Html.ActionLink("Business Center Admin Portal", "Login", "Account")
    <span class="easy-breadcrumb_segment-separator"> / </span>
    <span class="easy-breadcrumb_segment easy-breadcrumb_segment-title" tabindex="0">Password Reset</span>
</div>
<div class="page_title">
    <div class="container">
        <div class="row">
            <h2 tabindex="0"> Password Reset</h2>
        </div>
    </div>
</div>
<div class="login_form">
    <div class="container">
        <div class="login_wrapper" id="login_block">
            <div class="form_wrapper">
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    @Html.HiddenFor(model => model.Code)
                    @Html.HiddenFor(model => model.userId)
                    <div class="col-md-12 col-sm-12 col-xs-12 ">
                        <div class="form-group">
                            @ViewBag.status
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "New Password", name = "Password", id = "Password" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12 col-sm-12 col-xs-12 ">
                        <div class="form-group">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm New Password", name = "cPassword", id = "cPassword" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <button id="submit_contact" class="btn btn-default login" type="submit">Submit</button>
                }
            </div>
        </div>
    </div>
</div>
