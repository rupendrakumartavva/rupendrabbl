                                        {
                                            <p style="color: Red; font-size: 14px;" class="">
                                                <span>

                                                    <a href="javascript:void(0)" onclick="ShowDialog('@item.UserId','@Model.UserType') ">
                                                        @Html.Image("~/images/delete.png", "Deleted")
                                                    </a>
