
@using BusinessCenter.Admin.Helpers
@using BusinessCenter.Admin.Common;
@model IEnumerable<BusinessCenter.Admin.Models.TransferModel>
<div class="row">
    <div id="example_wrapper" class="dataTables_wrapper">
        <div class="table table-responsive" style="overflow: hidden;">
            <table class="dataTable table table-striped table-bordered  tableborder  smartgrid" id="datasearch" role="grid">
                <thead>
                    <tr>
                        <th class="text-center">License/Application #</th>
                        <th class="text-center">From Username</th>
                        <th class="text-center">To Username</th>
                     
                        <th class="text-center">Date of Transfer</th>
                        <th class="text-center">Transferred by</th>
                        <th class="text-center">Reason for Transfer</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="8">No record(s) found</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr class="tablerow tabrow text-center">
                                <td class="col2-tab col2 Superadmingrid usercol">
                                    <p style="font-size: 14px;" class="paracol12 paratabcol1 wordwrap-history">
                                            <span>

                                               
                                                    @item.SubmissionLicense
                                             
                                            </span>
                                        </p>
                                  
                                  
                                </td>
                                <td class="col2-tab col2 Superadmingrid usercol">
                                    <p style="font-size: 14px;" class="paracol12 paratabcol1 wordwrap-history">
                                        <span style="text-align: center">
                                            @item.FromUserId
                                        </span>
                                    </p>

                                  
                                 
                                </td>
                                <td class="col2-tab col2 Superadmingrid usercol">
                                    <p style="font-size: 14px;" class="paracol12 paratabcol1 wordwrap-history">
                                        <span style="text-align:center">
                                            @item.ToUserId

                                        </span>
                                    </p>
                                  
                                </td>

                                <td class="col1-tab col1 Superadmingrid usercol">
                                  
                                       
                                    <p style="font-size: 14px;" class="paracol12 paratabcol1 wordwrap-history">
                                        <span>
                                            @item.DateOfTransfer
                                        </span>
                                    </p>
                                     
                                </td>
                                <td class="col1-tab col1 Superadmingrid usercol">


                                    <p style="font-size: 14px;" class="paracol12 paratabcol1 wordwrap-history">
                                        <span>
                                            @item.CreatedBy
                                        </span>
                                    </p>

                                </td>
                                <td class="col1-tab col1 Superadmingrid usercol">


                                    <p style="font-size: 14px;" class="paracol12 paratabcol1 wordwrap-history">
                                        <span>
                                            @item.ReasonForTransfer
                                        </span>
                                    </p>

                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<style>
    .dataTables_wrapper .dataTables_paginate {
        padding-top: 0.55em !important;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button {
            padding: 0em 0em !important;
        }

    .paginate_button .previous {
        font-size: 19px !important;
    }

    .paginate_button .next {
        font-size: 19px !important;
    }

    .dataTables_paginate .paging_simple_numbers {
        font-size: 19px !important;
    }

    .login_form a {
        font-size: 19px !important;
    }

    table.dataTable.order-column.stripe tbody tr.odd > .sorting_1 {
    }

    .login_form p {
        margin-bottom: 0;
    }
    .wordwrap-history {
        word-wrap: break-word;
        word-break: break-all;
    }
</style>
<script type="text/javascript" class="init">
    var tableData = '';
    $(document).ready(function () {
        window.alert = function () { /* do nothing here */ }
        tableData = $('#datasearch').DataTable({
            "ordering": false,
            stateSave: true
        });
        $("#datasearch_length").hide();
        $("#datasearch_filter").hide();
        if ($('#datasearch td').attr('colspan') == '8') {
            $("#datasearch_info").hide();
            $("#datasearch_paginate").hide();
        } else {
        }
    });

    $(" #btnCreate").on('click', function (e) {
        tableData.state.clear();
    });

    $("a").on('click', function (e) {
        if ($(this).hasClass('businessActivities') || $(this).hasClass('paginate_button') || $(this).hasClass('updatebusinessactivity') || $(this).hasClass('activestatus')) {
        } else {
            //console.log("working");
            //alert("working");
            tableData.state.clear();
        }
    });

    function clearTableState() {
        tableData.state.clear();
    }

    $("#edit-btn").click(function () {
        $("#btncreate").text("Update");
        $("#btncreate").text("Update");
    });
</script>
