        localStorage.setItem("selectedSearchType", JSON.stringify(selectedSearchType));
        console.log("change event " + selectedSearchType);
    });

    $("#btnLastName").click(function () {
        dashboardSearch.state.clear();
        var selectedSearchType = $("#btnLastName").attr('id');
        localStorage.setItem("selectedSearchType", JSON.stringify(selectedSearchType));
        console.log("change event " + selectedSearchType);
    });

    $("#btnClear").click(function () {
        dashboardSearch.state.clear();
        var selectedSearchType = $("#btnClear").attr('id');
        localStorage.setItem("selectedSearchType", JSON.stringify(selectedSearchType));
        console.log("change event " + selectedSearchType);
    });

    $("a").on('click', function (e) {
      
        if ( $(this).hasClass('paginate_button') || $(this).hasClass('navReset')) {
        } else {
            console.log("working");
            //  alert("working");
            dashboardSearch.state.clear();
            localStorage.removeItem("selectedSearchType");
        }
        //$(this).trigger('click');
    });
</script>





