@using BusinessCenter.Admin.Helpers
@model BusinessCenter.Admin.Models.DashBoardViewModel
<div class="clearfix">
    <div class="row">
        <div id="borderdsgridtd">
            <table class="table table-striped  table-bordered  smartgrid  tableborder forceborder" id="datasearch" role="grid" style="margin-bottom: 20px;">
                <thead>
                    <tr>
                        <th class="text-center">Keywords</th>
                        <th class="text-center">Search Field</th>
                        <th class="text-center">Key Count</th>
                        <th class="text-center">Searched Date</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.SearchedKeywords.Count == 0)
                {
                        <tr>
                            <td colspan="4" class="col-md-12 Keywordsearchtable text-center"><span>No record(s) found</span></td>
                        </tr>
                }
                else
                {
                    foreach (var item in Model.SearchedKeywords)
                    {
                        <tr class="tablerow tabrow">
                            <td class="col4-tab col4 dashboardsearchgrid usercol borderdsgridtd text-center">
                                <p style="font-size:18px !important;font-family: Open Sans !important;" class="paracol4 paratabcol4">
                                    <span>
                                        @Html.DisplayFor(modelItem => item.Keywords)
                                    </span>
                                </p>
                            </td>
                            <td class="col3-tab col3 dashboardsearchgrid usercol borderdsgridtd text-center">
                                <p style="font-size:18px !important;" class="paracol3 paratabcol3">
                                    <span>
                                        @Html.DisplayFor(modelItem => item.TypeID)
                                    </span>
                                </p>
                            </td>
                            <td class="col2-tab col2 dashboardsearchgrid usercol borderdsgridtd text-center">
                                <p style="font-size:18px !important;" class="paracol2 paratabcol2">
                                    <span>
                                        @Html.DisplayFor(modelItem => item.KeyCount)
                                    </span>
                                </p>
                            </td>
                            <td class="col3-tab col3 dashboardsearchgrid usercol borderdsgridtd text-center">
                                <p style="font-size:18px !important;" class="paracol3 paratabcol3">
                                    <span>
                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                    </span>
                                </p>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .dataTables_wrapper .dataTables_paginate {
        padding-top: 0.55em !important;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button {
            padding: 0em 0em !important;
        }

    .paginate_button .previous {
        font-size: 19px !important;
    }

    .paginate_button .next {
        font-size: 19px !important;
    }

    .dataTables_paginate .paging_simple_numbers {
        font-size: 19px !important;
    }
    .smartgrid td, smartgrid th {
        border: 1px solid #eee !important;
    }
    .login_form p {
        margin-bottom: 0;
    }
    .login_form p{font-size:18px !important;font-weight:100 !important;}
</style>
<script type="text/javascript" class="init">
    var dashboardSearch = '';
    $(document).ready(function () {
      
          window.alert = function () { /* do nothing here */ }
        dashboardSearch =  $('#datasearch').DataTable({
            "ordering": false,
            "iDisplayLength": 5,
            stateSave: true
        });
        $("#datasearch_length").hide();
        $("#datasearch_filter").hide();
        if ($('#datasearch td').attr('colspan') == '4') {
            $("#datasearch_info").hide();
            $("#datasearch_paginate").hide();
        }
        if ($('#datasearch td').attr('colspan') == '4') {
            $('.Keywordsearchtable').addClass("sm-remove-content");
        }
    });

   

    $("#btnBusinessName").click(function () {
        dashboardSearch.state.clear();
        var selectedSearchType = $("#btnBusinessName").attr('id');
        localStorage.setItem("selectedSearchType", JSON.stringify(selectedSearchType));
        console.log("change event " + selectedSearchType);
    });

    $("#BBL").click(function () {
