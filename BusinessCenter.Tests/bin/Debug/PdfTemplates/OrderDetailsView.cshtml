<!DOCTYPE html>
@using System.Web.Mvc.Html
@using System;

@model BusinessCenter.Data.Model.BasicBusinessLicense

@{
    Layout = null;
}

<html>
<head>
    <title>title</title>


    <link rel="stylesheet" type="text/css" href="@System.Configuration.ConfigurationManager.AppSettings["siteAddress"]/css/app.css" />
    <link rel="stylesheet" type="text/css" href="@System.Configuration.ConfigurationManager.AppSettings["siteAddress"]/css/normalize.css">
    <link rel="stylesheet" type="text/css" href="@System.Configuration.ConfigurationManager.AppSettings["siteAddress"]/css/bootstrap.css" />

    <link rel="stylesheet" type="text/css" href="@System.Configuration.ConfigurationManager.AppSettings["siteAddress"]/css/style.css">
    <link rel="stylesheet" type="text/css" href="@System.Configuration.ConfigurationManager.AppSettings["siteAddress"]/css/temp.css">
    <link rel="stylesheet" type="text/css" href="@System.Configuration.ConfigurationManager.AppSettings["siteAddress"]/less/bbl.css">
    <link rel="stylesheet" type="text/css" href="@System.Configuration.ConfigurationManager.AppSettings["siteAddress"]/css/flexslider.css" />

    <link rel="stylesheet" type="text/css" href="@System.Configuration.ConfigurationManager.AppSettings["siteAddress"]/css/fileinput.css">

    <link rel="stylesheet" type="text/css" href="@System.Configuration.ConfigurationManager.AppSettings["siteAddress"]/css/customstyle.css" />
    <link href="@System.Configuration.ConfigurationManager.AppSettings["siteAddress"]/css/bootstrap-datetimepicker.min.css" rel="stylesheet" type="text/css" />
    <link href="@System.Configuration.ConfigurationManager.AppSettings["siteAddress"]/css/datetimepicker.css" rel="stylesheet" type="text/css" />

</head>
<body>
    <div>
        <div class="container" style="margin-left: 30px;margin-right: 30px; margin-bottom: 30px; margin-top: 30px;">
            <div class="row" style="height: 145px;">
                <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 no-pad left">
                    <p style="line-height: 16px !important; font-size: 14px;">GOVERNMENT OF</p>
                    <p style="line-height: 16px !important; font-size: 14px;">THE DISTRICT</p>
                    <p style="line-height: 16px !important; font-size: 14px;"> OF COLUMBIA</p>
                    <p style="line-height: 16px !important; font-size: 14px;">Muriel Bowser, Mayor</p>
                </div>
                <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7 no-pad text-center">
                    <p style="line-height: 16px !important; font-size: 14px; font-weight: bold;color:#7E747D">Department of Consumer and Regulatory Affairs</p>
                    <p style="line-height:16px!important;  font-size: 14px;font-weight: bold;color:#7E747D">Business License Division</p>
                    <p style="line-height:16px!important; font-size: 14px; font-weight: bold;color:#7E747D">1100 4th Street S.W.</p>
                    <p style="line-height:16px!important;  font-size: 14px;font-weight: bold;color:#7E747D">Washington DC 20024</p>
                    <p style="line-height:16px!important;  font-size: 14px;font-weight: bold;color:#7E747D">Tel. (202) 442-4589</p>
                </div>
                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 no-pad center" >
                    <p style="line-height: 16px !important; font-size: 14px;">Date Issued : @Model.DateIssued</p>
                    <p style="line-height: 16px !important; font-size: 14px;">Category : @Model.Category</p>
                    <p style="line-height: 16px !important; font-size: 14px;">License# : @Model.License</p>
                    <p style="line-height: 16px !important; font-size: 14px;">License Period : @Model.LicensePeriod</p>
                </div>
            </div>


            <div class="row" style="height: 40px; padding-top: 11px; border: 1px solid black; background-color: #000; color: #fff;">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 no-pad text-center">
                    <p style="line-height: 16px !important; font-size: 14px; font-weight: bold;color:#7E747D">
                    BASIC BUSINESS LICENSE</p>
                </div>
             </div>

            <div class="row" style="height: 160px; padding-top: 8px;">
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 no-pad left">
                    <p style="line-height: 20px !important; font-size: 14px; font-weight: bold; color: #7E747D">Billing Name and Address : </p>
                    <p style="line-height: 20px !important; font-size: 14px;">@Model.BillingName</p>
                    <p style="line-height: 20px !important; font-size: 14px;">@Model.BillingAddress</p>
                </div>
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 no-pad text-center">
                    <p style="line-height: 20px !important; font-size: 14px; font-weight: bold; color: #7E747D">Premise/Application's Name and Address : </p>
                    <p style="line-height: 20px !important; font-size: 14px;">@Model.PremisesName</p>
                    <p style="line-height: 20px !important; font-size: 14px;">@Model.PremisesAddress</p>
                </div>
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 no-pad center">
                    <p style="line-height: 20px !important; font-size: 14px; font-weight: bold; color: #7E747D">Registered Agent's Name and Address : </p>
                    <p style="line-height: 20px !important; font-size: 14px;">@Model.AgentName</p>
                    <p style="line-height: 20px !important; font-size: 14px;">@Model.AgentAddress</p>
                </div>
            </div>


            <div class="row" style="height: 120px; border-top: 1px solid #000; padding-top: 5px;">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 no-pad ">
                    <p style="line-height: 16px !important; font-size: 14px;">Owner's Name : @Model.OwnerName</p>
                    <p style="line-height: 16px !important; font-size: 14px;">Corp. Name : @Model.CorpName</p>
                    <p style="line-height: 16px !important; font-size: 14px;">Trade Name : @Model.TradeName</p>
                </div>
            </div>

            @*<div class="row" style="height: 130px;">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 no-pad">
                    <p style ="line-height: 16px !important; font-size: 14px;">Description Details -</p>
                    <p style="line-height: 16px !important; font-size: 14px;">General Business Licenses</p>
                </div>
            </div>*@
            <div class="row" style="border: 1px solid #786c71">

                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 no-pad" style="border-bottom: 2px solid #726C72">
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 no-pad left" style="border-right: 1px solid #726C72">
                        @if (@Model.CofoHopNumber != null && @Model.CofoHopNumber != "NOPO" && @Model.CofoHopNumber != "")
                        {
                            <p>
                                <label style="line-height: 16px !important; font-size: 14px; font-weight: normal; color: #7E747D;"> CofO/HOP# : @Model.CofoHopNumber</label>
                            </p>
                        }
                        else
                        {
                            <p>
                                <label style="line-height: 16px !important; font-size: 14px; font-weight: normal; color: #7E747D;"> CofO/HOP# : </label>
                            </p>
                        }
                      

                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 no-pad text-center" style="border-right: 1px solid #726C72">
                        <p>
                            <label style="line-height: 16px !important; font-size: 14px; font-weight: normal; color: #7E747D;"> SSL : @Model.Ssl</label>
                        </p>

                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 no-pad text-center" style="border-right: 1px solid #726C72">
                        <p>
                            <label style="line-height: 16px !important; font-size: 14px; font-weight: normal; color: #7E747D;"> Zone : @Model.Zone</label>
                        </p>

                    </div>

                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 no-pad left" style="border-right: 1px solid #726C72">
                        <p><label style="line-height: 16px !important; font-size: 14px; font-weight: normal; color: #7E747D;">Ward : @Model.Ward</label>
                        </p>


                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 no-pad text-center" style="border-right: 1px solid #726C72">
                        <p>
                            <label style="line-height: 16px !important; font-size: 14px; font-weight: normal; color: #7E747D;"> ANC : @Model.Anc</label>
                        </p>

                    </div>
                    <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 no-pad text-center">
                        <p>
                            <label style="line-height: 16px !important; font-size: 14px; font-weight: normal; color: #7E747D;">PERM NO. : @Model.PermNo</label>
                        </p>

                    </div>
                </div>


                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 no-pad" style="border-bottom: 2px solid #726C72">
                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 no-pad left" style="border-right: 1px solid #726C72">
                        <label style="line-height: 18px !important; font-size: 14px; font-weight: normal; color: #7E747D;"> &nbsp; &nbsp;</label>
                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 no-pad text-center" style="border-right: 1px solid #726C72">
                        <label style="line-height: 18px !important; font-size: 14px; font-weight: normal; color: #7E747D;"> &nbsp; &nbsp;</label>
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 no-pad text-center">
                        <p>
                            <label style="line-height: 16px !important; font-size: 14px; font-weight: normal; color: #7E747D;">UNITS : @Model.Units</label>
                        </p>
                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 no-pad left" style="border-right: 1px solid #726C72">
                        <label style="line-height: 18px !important; font-size: 14px; font-weight: normal; color: #7E747D;"> &nbsp; &nbsp;</label>
                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 no-pad text-center">
                        <label style="line-height: 18px !important; font-size: 14px; font-weight: normal; color: #7E747D;"> &nbsp; &nbsp;</label>
                    </div>
                </div>
            </div>
            <div class="row" style="height: 60px; padding-top: 25px;">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 no-pad text-left">
                    <p style="line-height: 16px !important; font-size: 14px;">Description Details -</p>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 no-pad text-left">
                    <p style="line-height: 16px !important; font-size: 14px;">@Model.PrimaryCategoryName</p>
                </div>
            </div>
          
            <div class="row" style="height: 80px; padding-top: 25px;">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 no-pad text-center">
                    @foreach (var item in Model.CategoryDetailsList)
                    {
                        <p style="line-height: 16px !important; font-size: 14px;">@item.Endoresment - @item.CategoryName</p>
                    }
                </div>
            </div>
           
            <div class="row" style="height: 80px;">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 no-pad text-center">
                    <p style="line-height: 16px !important; font-size: 14px; font-weight: bold;color:#7E747D">
                        --THE LAW REQUIRES THIS LICENSE TO BE POSTED IN A CONSPICUOUS PLACE ON THE PREMISES--
                    </p>
                </div>
            </div>

            <div class="row" style="height: 50px; padding-top: 5px;">
                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 no-pad left">
                    </div>
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 no-pad right" >
                        <p style="padding-right: 20px;  ">
                            <img src="@Model.Signature" alt="Image"/>
                        </p>

                    </div>
                </div>

                <div class="row" style="height: 130px; ">
                    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 no-pad left">
                        <p style="line-height: 16px !important; font-size: 14px; ">*License Effective from the later of Issued or Start of License-Period Date</p>
                    </div>
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 no-pad right" style="border-top: 1px solid #000;">
                        <p style="line-height: 16px !important; font-size: 14px; ">Director : </p>
                        <p style="line-height: 16px !important; font-size: 14px; ">Melinda Bolling : </p>
                    </div>
                </div>
            </div>
    </div>
</body>
</html>
